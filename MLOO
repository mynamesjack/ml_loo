import numpy as np
x = np.array([-6,-2,0,4,11,15,24])
average = 0


for i in range(len(x)):
    a = x[i:]
    b = x[:-i]
    if i > 1: average += np.sum(a) / (len(x)-1)
    np.append(a,b)

classifier = average / len(x)
    
class1 = x > classifier
class2 = x < classifier

print(classifier)
print(f"The Values in class 1 are {x[class1]}")
print(f"The Values in class 1 are {x[class2]}")
